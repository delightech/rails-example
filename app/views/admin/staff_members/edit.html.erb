<% @title = "職員アカウントの編集" %>
<h1><%= @title %></h1>

<div id="generic-form">
<%# controllerで渡すオブジェクトによって、form_withが自動的に登録か更新かを判別しタグ出力する。リクエストURLも同様 %>
  <%= form_with model: @staff_member, url: [:admin, @staff_member] do |f| %>
    <%= render "form", f: f%>
    <div class="buttons">
      <%= f.submit "更新" %>
      <%= link_to "キャンセル", :admin_staff_members %>
    </div>
  <% end %>
</div>