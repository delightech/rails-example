<header>
  <%= link_to "BAUKIS2", :admin_root, class: "logo-mark" %>
  <%#
    content_tag は第一引数に指定したタグを出力する
    第二引数はタグのvalue
    第三引数はタグに指定するclass
  %>
  <%= content_tag(:span, flash.notice, class: "notice") if flash.notice %>
  <%= content_tag(:span, flash.alert, class: "alert") if flash.alert %>
  <%=
    if current_administrator
      link_to "ログアウト", :admin_session, method: :delete, class: "login"
    else
      link_to "ログイン", :admin_login, class: "login"
    end
  %>
</header>
